
<h1>Burgers</h1>


<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li>
        {{Burgers}}
      </li>
		
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      <button class="change-devour" data-id="{{id}}" data-newDevour="{{devoured}}">
		{{#if }}Devoured{{else}}<!--gotta move to right side of screen -->{{/if}}
	</button>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name"> 
  </div>

  <button type="submit">Add Burger</button>
</form>
